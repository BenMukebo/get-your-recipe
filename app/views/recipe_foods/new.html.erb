<div class="card">
  <div class="food-title">
    <h1>Add to my Shopping List...</h1>
  </div>
  <%= form_with url:new_recipe_path(@recipe_foods.recipe_id), scope: :food, data: { turbo: false }, class: "food-form" do |form| %>
  <%= form_with model: @foods, url:foods_path, scope: :food, method: :post, data: { turbo: false }, class: "food-form" do |form| %>
  
    <%= form_with model: @foods, url:foods_path, data: { turbo: false }, class: "food-form" do |form| %>
    <div class="input textarea">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :quantity %>
      <%= form.text_field :measurement_unit, class: "form-control", required: true %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :price %>
      <%= form.text_field :price, class: "form-control", required: true %>
    </div>
    <div class="submit mt-3">
      <%= form.submit "submit" %>
    </div>
  <% end %>
</div>